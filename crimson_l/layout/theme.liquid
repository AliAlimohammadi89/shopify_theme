  <header class="site-header" role="banner">
		<div class="wrapper">
			<div class="grid--full">
				<div class="grid-table">
					<div class="grid-row">
						<div class="grid-cell logo-cell">
							<div class="logo">
								{% comment %}
								Use the uploaded logo from theme settings if enabled
								{% endcomment %}
								<h1 class="header-logo large--left">
								{% if settings.use_logo %}
									<a href="/">
									{{ 'logo.png' | asset_url | img_tag: shop.name }}
									</a>
								{% else %}
									<a href="/">{{ shop.name }}</a>
								{% endif %}
								</h1>
							</div>
						</div>
						<div class="grid-cell desktop-nav">
							<nav class="nav-bar" role="navigation">
								{% include 'site-nav' %}
							</nav>
						</div>
						<div class="grid-cell sc-cell">
							<div class="mobile-nav">
								<nav class="nav-bar" role="navigation">
									<div class="nav-toggler"><span>Go to...</span><i class="fa fa-navicon"></i></div>
									{% include 'site-nav' %}
								</nav>
							</div>
							<div class="header-cart">
							<span id="cartToggle">
									<i class="fa fa-shopping-cart"></i>
									<span id="cartCount">{{ cart.item_count }}</span>
								</span>
								<div class="small-cart">
									{% include 'small-cart' %}
								</div>
							</div>
							<div class="header-search">
								<div class="nav-search">
									{% include 'search-bar' %}
                 
								</div>
                              
                              <div style="text-align: center ; font-size: 13pt; color: #FFFFFF; "><b><a href="http://www.ruggalleryoutlet.com/pages/free-shipping">Free Shipping</a></b>
                              
                             </div>
                            
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
	<main class="main-content" role="main">

		{{ content_for_layout }}

	</main>

	{% include 'footer' %}
	{% comment %}
		An (almost) empty JS file for you to place your code
	{% endcomment %}
	{{ 'shop.js' | asset_url | script_tag }}
	<div class="quickshadow">
		<div class="quick-modal">
			<a class="close-quickview" href="#"><i class="fa fa-times-circle-o"></i></a>
			<div id="quick-modal"></div>
		</div>
	</div>
</body>
</html>