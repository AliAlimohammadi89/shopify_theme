<head>

	<!-- Basic page needs ================================================== -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
  	<link rel="shortcut icon" href="{{ 'logo_small.png' | asset_url }}" type="image/png" />
  
	<!-- Title and description ================================================== -->
	<title>
	{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} | Rug Gallery at Concord Mills {% endunless %}
	</title>

	{% if page_description %}
	<meta name="description" content="{{ page_description | escape }}">
	{% endif %}

	<!-- Product meta ================================================== -->
	{% include 'fb-open-graph-tags' %}
	{% include 'twitter-card' %}

	<!-- Helpers ================================================== -->
	<link rel="canonical" href="{{ canonical_url }}">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<link href='//fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
	<link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700' rel='stylesheet' type='text/css'>
	{% if settings.use_google_font %}
	{{ settings.google_font_embed }}
	{% endif %}
	<!-- CSS ================================================== -->
	{{ 'timber.scss.css' | asset_url | stylesheet_tag }}
	{{ 'flexslider.css' | asset_url | stylesheet_tag }}
	{{ 'jquery.fancybox.css' | asset_url | stylesheet_tag }}
	{{ 'jquery.fancybox-buttons.css' | asset_url | stylesheet_tag }}
	{{ 'font-awesome.min.css' | asset_url | stylesheet_tag }}
    {{ 'imagegrid.css' | asset_url | stylesheet_tag }}

	<!-- Header hook for plugins ================================================== -->
	{{ content_for_header }}

	<!--[if lt IE 9]>
	{{ '//html5shiv.googlecode.com/svn/trunk/html5.js' | script_tag }}
	<![endif]-->

	{% comment %}
		If you store has customers disabled, you can remove the following JS file
	{% endcomment %}
	{% if template contains 'customers' %}
		{{ 'shopify_common.js' | shopify_asset_url | script_tag }}
		{{ 'customer_area.js'	| shopify_asset_url | script_tag }}
	{% endif %}

	{% comment %}
		Theme dependent JS is loaded at the very bottom of this file for performance reasons.
		However, jQuery is included here so that it can be used inside the templates, e.g. in product.liquid.
	{% endcomment %}
	{{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}
	{{ 'api.jquery.js' | shopify_asset_url | script_tag }}
	{{ 'jquery.flexslider.js' | asset_url | script_tag }}
	{{ 'jquery.fancybox.pack.js' | asset_url | script_tag }}
	{{ 'jquery.fancybox-buttons.js' | asset_url | script_tag }}
	{{ 'jquery.elevatezoom.js' | asset_url | script_tag }}
	{{ 'option_selection.js' | shopify_asset_url | script_tag }}
	
	<!--[if lte IE 8]>
	{{ 'iestyle.scss.css' | asset_url | stylesheet_tag }}
	<![endif]-->
  	<script type="text/javascript">
    	Shopify.money_format = "{{ shop.money_format }}";
    </script>
<meta name="p:domain_verify" content="0dc954f89588f73ca95b4b90656d30b4"/>
  <script src="https://apis.google.com/js/platform.js" async defer></script>
<script async src="https://collection-filter-www.herokuapp.com/collection-filter-v1.js?shop={{shop.permanent_domain}}"></script>
</head>

{% comment %}
	Add the page template as a class for easy page or template specific styling.
{% endcomment %}
<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >
