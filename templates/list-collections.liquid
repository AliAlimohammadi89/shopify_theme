

<div class="list-page-all-all">
  <div class="list-page-direction">
    <span>Home</span><span class="direction-icon"><span style="font-size: 21px"> > </span> Brand</span>
  </div>
  <div class="list-page-all">  
    
    
    <div class="list-page-list-all">
        <div style="width: 100%;margin-bottom: 6px;">
      {% include 'breadcrumb' %}
		</div>
{% for collection in collections %}
      <p><a href="{{collection.url | 'url'}}">Show More {{collection.title}} --> </a>

             {% for product in collection.products  limit :3%}
      <div class="list-page-list-items">
        <div class="list-page-list-tag"> New</div>
        <div class="list-page-list-items-img">
          <a href="{{product.url}}">
               <img class="mySlides" src="{% if product.metafields.images.all %}{% assign images = product.metafields.images.all | split: "," | reverse  %}{% assign image = images[0] | split: ".jpg" %}{{image}}_S.jpg  {%else%}{{ product.featured_image | product_img_url: 'medium' }}{% endif %}
" alt="{{ product.title | escape  }}" style="width:100%;height: calc(100% - 60px);">
                 </a>
        </div>
        <div class="list-page-list-items-name">{{product.title}}</div>
        <div class="list-page-list-items-price">{%- if product.price_min  == product.price_max  -%}                
                	 {{ product.price_min | money }}
                {% else %}
               		 {{ product.price_min | money }} - {{product.price_max | money }}
                {% endif %}</div>
        
 			<span class="grid-item-label sale" style="color:red">{% if product.compare_at_price > product.price %}{{ product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | money_without_currency | times: 100 | remove: '.0'}}%{% endif %} OFF</span>
       </div>
      		{% endfor %}
      <div style="width:100%"></div>      

      {% endfor %}

      
        {% if paginate.pages > 1 %}
      <div class="pagination" style="width: 100%;text-align: center;">
        {{ paginate | default_pagination | replace: '&laquo; Previous', '&larr;' | replace: 'Next &raquo;', '&rarr;' }}
      </div>
    {% endif %}

      
      
 	 </div>
 </div>
</div>

<style>
 html, body {
      margin: 0;
      height: auto;
      font-family: Lato;
    }
  #container {
    width: 600px;
    margin: 0 auto;
    padding: 20px;
}

.btn {
    display: inline-block;
    padding: 10px;
    border-radius: 5px; /*optional*/
    color: #aaa;
    font-size: .875em;
}

.pagination {
     padding: 20px;
    margin-bottom: 20px;
}

.page {
    display: inline-block;
    padding: 0px 9px;
    margin-right: 4px;
    border-radius: 3px;
    border: solid 1px #c0c0c0;
    background: #e9e9e9;
    box-shadow: inset 0px 1px 0px rgba(255,255,255, .8), 0px 1px 3px rgba(0,0,0, .1);
    font-size: .875em;
    font-weight: bold;
    text-decoration: none;
    color: #717171;
    text-shadow: 0px 1px 0px rgba(255,255,255, 1);
}

.page:hover, .page.gradient:hover {
    background: #fefefe;
    background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#FEFEFE), to(#f0f0f0));
    background: -moz-linear-gradient(0% 0% 270deg,#FEFEFE, #f0f0f0);
}

.page.active {
    border: none;
    background: #616161;
    box-shadow: inset 0px 0px 8px rgba(0,0,0, .5), 0px 1px 0px rgba(255,255,255, .8);
    color: #f0f0f0;
    text-shadow: 0px 0px 3px rgba(0,0,0, .5);
}

.page.gradient {
    background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#f8f8f8), to(#e9e9e9));
    background: -moz-linear-gradient(0% 0% 270deg,#f8f8f8, #e9e9e9);
}

.pagination.dark {
    background: #414449;
    color: #feffff;
}

.page.dark {
    border: solid 1px #32373b;
    background: #3e4347;
    box-shadow: inset 0px 1px 1px rgba(255,255,255, .1), 0px 1px 3px rgba(0,0,0, .1);
    color: #feffff;
    text-shadow: 0px 1px 0px rgba(0,0,0, .5);
}

.page.dark:hover, .page.dark.gradient:hover {
    background: #3d4f5d;
    background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#547085), to(#3d4f5d));
    background: -moz-linear-gradient(0% 0% 270deg,#547085, #3d4f5d);
}

.page.dark.active {
    border: none;
    background: #2f3237;
    box-shadow: inset 0px 0px 8px rgba(0,0,0, .5), 0px 1px 0px rgba(255,255,255, .1);
}

.page.dark.gradient {
    background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#565b5f), to(#3e4347));
    background: -moz-linear-gradient(0% 0% 270deg,#565b5f, #3e4347);
}
  
  
  
    .list-page-all-all {
      width: calc(100% - 100px);
      display: flex;
      flex-direction: column;
      padding: 10px 50px;
    }
    .list-page-direction {
      width: 100%;
      display: flex;
      align-items: center;
      font-size: 17px;
    }
    .direction-icon {
      display: flex;
      align-items: center;
    }
    .list-page-direction span {
      cursor: pointer;
      margin-right: 10px;
    }
    .list-page-all {
      width: 100%;
      display: flex;
      justify-content: space-between;
      margin-top: 25px;
      position: relative;
    }
    .filter-toggle {
      font-size: 23px;
      display: none;
      width: 30px;
      height: 30px;
      justify-content: center;
      align-items: center;
    }
    .list-page-filter-all {
      width: 200px;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    .list-page-filter-items {
      width: 100%;
      display: flex;
      flex-direction: column;
    }
    .list-page-filter-items-header {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 5px 0;
      border-bottom: 1px solid #deb335;
      cursor: pointer;
      font-weight: bold;
    }
    .list-page-filter-items-header-icon {
      font-size: 27px;
    }
    .toggleDown {
      display: none;
    }
    .list-page-filter-items-text {
      width: 100%;
      display: flex;
      flex-direction: column;
      margin: 10px 0;
    }
    .list-page-filter-items-text-items {
      width: 100%;
      display: flex;
      align-items: center;
      margin: 5px 0;
    }
    .list-page-filter-items-text-items-box {
      width: 15px;
      height: 15px;
      border: 1px solid #707070;
      background-color: #e5bf44;
      cursor: pointer;
      margin-right: 15px;
    }
    .list-page-filter-items-text-items-value {
      font-size: 16px;
      font-weight: bold;
    }
    .list-page-list-all {
      width: calc(100% - 225px);
      height: fit-content;
      display: flex;
      flex-wrap: wrap;
    }
    .list-page-list-items {
      width: calc(25% - 30px);
      height: 575px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      margin: 0 15px 30px 15px;
      position: relative;
    }
    .list-page-list-items-img {
      width: 100%;
      height: 85%;
      display: flex;
      justify-content: center;
      cursor: pointer;
    }
    .list-page-list-items-img img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .list-page-list-items-name {
      width: 100%;
      text-align: center;
      font-weight: bold;
      font-size: 17px;
    }
    .list-page-list-items-price {
      width: 100%;
      text-align: center;
      font-size: 17px;
      color: #deb335;
    }
    .list-page-list-tag {
      padding: 5px 15px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: black;
      color: white;
      position: absolute;
      top: 10px;
      right: 10px;
      border-radius: 5px;
      font-size: 14px;
    }
    .filter-overlay {
      position: fixed;
      top: 115px;
      left: -100%;
      width: 100%;
      height: calc(100vh - 115px);
      background-color: black;
      opacity: 0.6;
      z-index: 9;
      transition: all .5s;
    }
    @media only screen and (max-width: 1440px) {
      .list-page-list-items {
        height: 450px;
      }
    }
    @media only screen and (max-width: 1024px) {
      .list-page-list-items {
        height: 350px;
        width: calc(33.33% - 30px);
      }
    }
    @media only screen and (max-width: 768px) {
      .list-page-list-items {
        height: 325px;
        width: calc(50% - 30px);
      }
      .header-bottom {
        top: 0 !important;
      }
    }
    @media only screen and (max-width: 425px) {
      .list-page-direction {
        display: none;
      }
      .filter-toggle {
        display: flex;
        position: sticky;
        top: 15px;
        z-index: 99;
      }
      .showFilter {
        position: absolute;
        top: -5px;
        left: -25px;
      }
      .closeFilter {
        display: none;
        z-index: 9;
        position: absolute;
        right: -265px;
        top: -15px;
        color: white;
      }
      .list-page-filter-all {
        background-color: #ededed;
        padding: 0 15px;
        position: absolute;
        left: -280px;
        top: -35px;
        height: calc(100vh - 115px);
        z-index: 9;
        transition: all .5s;
      }
      .list-page-list-all {
        width: 100%;
      }
      .list-page-list-items {
        width: 100%;
        height: 375px;
      }
    }


</style>

<script>

    function htmlFlow() {
        $('html').css({
            'overflow': 'inherit',
        })
    }
    function goScrollUp() {
        $(function () {
            const scroll_pos = (0);
            $('html, body').animate({scrollTop: (scroll_pos)}, 'slow');
        });
    }

  function toggleFilter() {
      if ($('.list-page-filter-items-text').css('display') === 'flex') {
          $('.list-page-filter-items-text').slideUp();
          $('.toggleUp').css('display', 'none');
          $('.toggleDown').css('display', 'flex');
      } else {
          $('.list-page-filter-items-text').slideDown();
          $('.toggleUp').css('display', 'flex');
          $('.toggleDown').css('display', 'none');
      }
  }

  function openMenuToggle() {
      if ($('.header-bottom-menu').css('left') === '0px') {
          $('.header-bottom-menu').css('left', '-250px');
          $('.menu-overlay').css('left', '-100%');
          $('.filter-toggle').css('z-index', '99');
          if ($('.list-page-filter-all').css('left') === '-50px') {
              $('html, body').css({
                  'overflow-y': 'hidden',
                  'height': '100%'
              });
          } else {
              $('html, body').css({
                  'overflow-y': 'auto',
                  'overflow-x': 'hidden',
                  'height': 'auto'
              });
          }
      } else {
          $('.header-bottom-menu').css('left', '0px');
          $('.menu-overlay').css('left', '0px');
          $('.filter-toggle').css('z-index', '9');
          $('html, body').css({
              'overflow-y': 'hidden',
              'height': '100%'
          });
      }
      htmlFlow();
  }

  function showFilterMenu() {
      goScrollUp();
      if ($('.list-page-filter-all').css('left') === '-280px') {
          $('.list-page-filter-all').css('left', '-50px');
          $('.showFilter').css('display', 'none');
          setTimeout(() => {
              $('.closeFilter').css('display', 'flex');
      }, 500);
          $('.filter-overlay').css('left', '0px');
          $('html, body').css({
              'overflow-y': 'hidden',
              'height': '100%'
          });
      } else {
          $('.list-page-filter-all').css('left', '-280px');
          setTimeout(() => {
              $('.showFilter').css('display', 'flex');
      }, 500);
          $('.closeFilter').css('display', 'none');
          $('.filter-overlay').css('left', '-100%');
          $('html, body').css({
              'overflow-y': 'auto',
              'overflow-x': 'hidden',
              'height': 'auto'
          });
      }
      $('html').css({
          'overflow': 'inherit',
  })
  }
  htmlFlow();
  goScrollUp();

</script>
